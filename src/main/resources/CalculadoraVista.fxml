<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="561.0" prefWidth="285.0"
            stylesheets="@styles/calculadora.css" xmlns="http://javafx.com/javafx/21"
            fx:controller="org.alvarowau.Controller.CalculadoraController">
    <AnchorPane prefHeight="53.0" prefWidth="285.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <children>
            <Button fx:id="btnCerrar" layoutX="235.0" minHeight="60.0" minWidth="60.0" mnemonicParsing="false"
                    onAction="#cerrarVentana" prefHeight="60.0" prefWidth="60.0" styleClass="operation-button"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@imagenes/icons8-eliminar-60.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnMinimizar" layoutX="152.0" minHeight="60.0" minWidth="60.0" mnemonicParsing="false"
                    onAction="#minimizarVentana" prefHeight="60.0" prefWidth="60.0" styleClass="number-button"
                    AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@imagenes/icons8-línea-horizontal-60.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </children>
    </AnchorPane>

    <GridPane alignment="CENTER" hgap="5" layoutX="15.0" layoutY="78.0" vgap="5" AnchorPane.leftAnchor="15.0"
              AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="78.0">
        <TextField fx:id="display" alignment="CENTER_RIGHT" editable="false" prefWidth="200.0" GridPane.columnSpan="4"/>

        <!-- Fila 1 -->
        <Button fx:id="btn7" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="7"
                GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button fx:id="btn8" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="8"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="btn9" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="9"
                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button fx:id="btnEntre" onAction="#addOperaccion" prefHeight="60" prefWidth="60" styleClass="operation-button"
                GridPane.columnIndex="3" GridPane.rowIndex="1">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-dividir-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Fila 2 -->
        <Button fx:id="btn4" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="4"
                GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button fx:id="btn5" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="5"
                GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="btn6" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="6"
                GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button fx:id="btnMultiply" onAction="#addOperaccion" prefHeight="60" prefWidth="60"
                styleClass="operation-button" GridPane.columnIndex="3" GridPane.rowIndex="2">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-x-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Fila 3 -->
        <Button fx:id="btn1" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="1"
                GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Button fx:id="btn2" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="2"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="btn3" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="3"
                GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Button fx:id="btnMenos" onAction="#addOperaccion" prefHeight="60" prefWidth="60" styleClass="operation-button"
                GridPane.columnIndex="3" GridPane.rowIndex="3">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-menos-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Fila 4 -->
        <Button fx:id="btn0" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="0"
                GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Button fx:id="btnPunto" onAction="#addValue" prefHeight="60" prefWidth="60" styleClass="number-button" text="."
                GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button fx:id="btnBorrar" onAction="#elimnarValor" prefHeight="60" prefWidth="60" styleClass="operation-button"
                GridPane.columnIndex="2" GridPane.rowIndex="4">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-símbolo-vaciar-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnMas" onAction="#addOperaccion" prefHeight="60" prefWidth="60" styleClass="operation-button"
                GridPane.columnIndex="3" GridPane.rowIndex="4">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-más-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Fila 5 -->
        <Button fx:id="btnLimpiar" onAction="#elinarCompleto" prefHeight="60" prefWidth="250"
                styleClass="operation-button" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-c-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnEquals" onAction="#ResultadoTotal" prefHeight="60" prefWidth="250"
                styleClass="operation-button" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="5">
            <graphic>
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@imagenes/icons8-signo-igual-30.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>

    <Button fx:id="btnAlvaro" layoutX="19.0" layoutY="483.0" mnemonicParsing="false" onAction="#visitarRepositorio"
            prefHeight="30.0" prefWidth="250.0" styleClass="operation-button" text="\@alvarowau">
        <graphic>
            <ImageView fitHeight="62.0" fitWidth="83.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@imagenes/github-mark.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
